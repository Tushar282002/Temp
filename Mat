<p>single-select-dropdown2 works!</p>

<form class="mb-2 custom-bootstrap-dropdown form-group">

  <mat-form-field appearance="fill" class="custom-mat-form-field">
    <mat-label class="form-label" for="id">{{ label }}</mat-label>

    <mat-select
      class="form-control"
      id="selectedValue"
      style="cursor: pointer;"
      [id]="id"
      name="selectedValue"
      [(ngModel)]="selectedValue"
      (ngModelChange)="onItemSelectionChange($event)"
      [disabled]="disabled"
    >
      <mat-option *ngIf="placeholder" [value]="" disabled>
        {{ placeholder }}
      </mat-option>

      <mat-option *ngFor="let item of items" [value]="item">
        {{ getDisplayValue(item) }}
      </mat-option>
    </mat-select>
  </mat-form-field>

</form>



.custom-bootstrap-dropdown {
  font-size: var(--font-size, 14px);
  margin-left: 2px;
  margin-bottom: 1px;

  .form-label {
    font-size: 0.85em;
    line-height: 0.9em;
    font-weight: 400;
    margin-bottom: 4px;
    display: block;
  }

  .custom-mat-form-field {
    width: 100%;
  }

  ::ng-deep .mat-form-field-appearance-fill .mat-form-field-flex {
    background-color: #ffffff; /* white background like normal select */
    border: 1px solid #b4babf;
    border-radius: 0.2rem;
    padding: 0 5px;
    height: calc(1em + 0.75rem + 2px);
    font-size: 1em;
    font-family: "open-sans", sans-serif;
  }

  ::ng-deep .mat-select-trigger {
    display: flex;
    align-items: center;
    height: 100%;
    padding-right: 25px; /* space for dropdown arrow */
  }

  /* Dropdown panel */
  ::ng-deep .mat-select-panel {
    border: 1px solid #b4babf;
    border-radius: 0.2rem;
    font-size: 1em;
    font-family: "open-sans", sans-serif;
  }

  /* Hover effect */
  ::ng-deep .mat-option:hover:not(.mat-option-disabled) {
    background-color: #3071a9 !important;
    color: #ffffff !important;
  }

  /* Selected option */
  ::ng-deep .mat-option.mat-selected:not(.mat-option-disabled) {
    background-color: darkgreen !important;
    color: #ffffff !important;
  }

  /* Dropdown arrow */
  ::ng-deep .mat-select-arrow {
    color: #506166;
  }
