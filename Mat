<form class="mb-2 custom-bootstrap-dropdown form-group">

  <mat-form-field appearance="fill" class="custom-mat-form-field">
    <mat-label class="form-label" for="id">{{ label }}</mat-label>

    <mat-select
      class="form-control"
      id="selectedValue"
      style="cursor: pointer;"
      [id]="id"
      name="selectedValue"
      [(ngModel)]="selectedValue"
      (ngModelChange)="onItemSelectionChange($event)"
      [disabled]="disabled"
    >
      <mat-option *ngIf="placeholder" [value]="" disabled>
        {{ placeholder }}
      </mat-option>

      <mat-option *ngFor="let item of items" [value]="item">
        {{ getDisplayValue(item) }}
      </mat-option>
    </mat-select>
  </mat-form-field>

</form>



@use '../../../styles/colors.scss' as color;

.custom-mat-dropdown {
  font-size: 14px; // base font size for the dropdown

  .custom-mat-form-field {
    width: 100%;

    .mat-form-field-label {
      font-size: 0.85em;  // label font
      line-height: 1em;
      font-weight: 400;
      color: #000; // black label
    }

    .custom-mat-select {
      font-size: 1em; // value font
      font-family: "open-sans";
      height: calc(1em + 0.75rem + 2px);
      padding: 0px 25px 0px 5px;

      .mat-select-trigger {
        line-height: 1em; // vertically align text
        padding: 0 0 0 5px;
      }

      // Dropdown panel styles
      ::ng-deep .mat-select-panel {
        font-family: "open-sans";
        font-size: 1em;
      }

      // Option hover
      ::ng-deep .mat-option:hover:not(.mat-option-disabled) {
        background-color: green !important;
        color: white !important;
      }

      // Option selected
      ::ng-deep .mat-option.mat-selected:not(.mat-option-disabled) {
        background-color: darkgreen !important;
        color: white !important;
      }
    }
  }
}

